<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/socket_on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/presence_online" />

    <TextView
        android:id="@+id/socket_on_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/socket_connected"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/socket_on"
        app:layout_constraintStart_toEndOf="@+id/socket_on"
        app:layout_constraintTop_toTopOf="@+id/socket_on"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>